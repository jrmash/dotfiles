gpg-store-secret() {
    local secretPath="${1}"
    local secretValue="${2}"
    
    echo "${secretValue}" | gpg --output "${secretPath}" -aeqs --recipient {{ .gpg.signingEmail }}
    chmod 0600 "${secretPath}"
}


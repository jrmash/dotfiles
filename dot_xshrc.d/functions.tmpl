gpg-store-secret() {
    local secret="${1}"
    local secretPath="${3:-${HOME}/.secrets}/${2}"

    echo "${secret}" | gpg --output "${secretPath}" -aeqs --recipient {{ .gpg.signingEmail }}
    chmod 0600 "${secretPath}"
}

kgsec-decrypt() {
    kgsec "${@}" -o json | jq '.data | map_values(@base64d)'
}

{
	// Language Specific Settings
	"[bats][shellscript]": {
		"editor.detectIndentation": false,
		"editor.insertSpaces": false,
		"editor.tabSize": 4
	},
	"[go]": {},
	"[hcl]": {
		"editor.tabSize": 2
	},
	"[javascript]": {
		"editor.tabSize": 2
	},
	"[json]": {
		"editor.quickSuggestions": {
			"strings": true
		},
		"editor.suggest.insertMode": "replace",
		"gitlens.codeLens.scopes": [
			"document"
		]
	},
	"[packer]": {
		"editor.tabSize": 2
	},
	"[terraform]": {
		"editor.defaultFormatter": "hashicorp.terraform",
		"editor.tabSize": 2
	},
	"[terragrunt]": {
		"editor.defaultFormatter": "hashicorp.terraform",
		"editor.tabSize": 2
	},
	"[terramate]": {
		"editor.tabSize": 2
	},
	"[yaml]": {
		"editor.tabSize": 2
	},
	"css.format.newlineBetweenRules": false,
	"debug.console.wordWrap": false,
	"diffEditor.wordWrap": "off",
	"editor.comments.ignoreEmptyLines": false,
	"editor.fontFamily": "'CaskaydiaCove Nerd Font Mono', Menlo, Monaco, 'Courier New', monospace",
	"editor.fontLigatures": true,
	"editor.formatOnSave": true,
	"editor.indentSize": "tabSize",
	"editor.inlineSuggest.enabled": true,
	"editor.language.colorizedBracketPairs": [],
	"editor.renderWhitespace": "all",
	"editor.rulers": [
		80,
		100,
		120,
		160
	],
	"editor.suggestSelection": "first",
	"editor.trimAutoWhitespace": false,
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"files.associations": {
		// "*.hcl": "terraform",
		"*.tf": "terraform",
		"*.tm.hcl": "hcl",
		"*.xshenv": "shellscript",
		"*.xshrc": "shellscript",
		"Brewfile": "ruby"
	},
	"files.exclude": {
		"**/.classpath": true,
		"**/.factorypath": true,
		"**/.project": true,
		"**/.settings": true
	},
	"git.confirmSync": false,
	"git.terminalAuthentication": false,
	"github.copilot.enable": {
		"*": true,
		"plaintext": true,
		"markdown": true,
		"scminput": false,
		"shellscript": true,
		"yaml": true
	},
	"github.gitAuthentication": false,
	"githubPullRequests.pullBranch": "never",
	"githubPullRequests.terminalLinksHandler": "github",
	"hclformat.levant_support": false,
	"json.schemas": [],
	"terminal.external.osxExec": "Tabby.app",
	"terminal.integrated.defaultProfile.linux": "zsh",
	"terminal.integrated.defaultProfile.osx": "zsh",
	"terminal.integrated.inheritEnv": false,
	"terminal.integrated.env.osx": {
		"PATH": ""
	},
	"terminal.integrated.scrollback": 1000000,
	"terminal.integrated.shellIntegration.enabled": false,
	"terraform.codelens.referenceCount": true,
	"terraform.languageServer.ignoreSingleFileWarning": true,
	"workbench.editor.wrapTabs": true,
	"workbench.editor.enablePreview": true,
	"workbench.colorTheme": "Default Dark+",
